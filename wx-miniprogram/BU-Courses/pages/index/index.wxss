/**index.wxss**/

.tab-container {
  height:720px;
  width:750rpx;
  display:flex;
}

.tab-section {
  background-color:#f6f6f6;
  color:#18191A;
}

.tab-section-divide {
  width: 53rpx;
  height: 200px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-bottom: 1rpx solid #cacbcc;
  box-sizing: border-box;
}

.tab-section-item {
  width: 53rpx;
  height: 40px;
  font-size: 24rpx;
  justify-content: center;
  display: flex;
  align-items: center;
}

.tab-line {
  position: absolute;
  width: 100%;
  height: 1px;
  background-color:#cacbcc;
  margin-top: 0px; /**-1**/
}


.course-item {
  position: absolute;
  width: 140rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.course-item-inner {
  width: 138rpx;
  border-radius: 3px;
  font-size: 24rpx;
  color: #fff;
  display: flex;
  flex-flow: column wrap;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  text-overflow: ellipsis;
  background-color: rgba(167, 0, 0, 0.678);
}

.course-item-inner text:not(:last-child) {
  /*margin-bottom: 6rpx;*/
}






.tab-top {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 40px;
}

.cur-month {
  width: 53rpx;
  height: 52rpx;
  background-color: #c00;
  text-align: center;
  line-height: 52rpx;
  color: #fff;
  font-size: 28rpx;
  border-top-right-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
}

.week-list {
 display: flex;
 flex-direction: row;
 max-width: 100%;
 height: 100%;
}

.day-text {
  width: 140rpx;
  height: 100%;
  font-size: 28rpx;
  justify-content: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.day-text.active {
  background-color: #c00;
}

.day-text.active text {
  color: #fff !important;
}

.day-text text:first-child {
  color: #18191A;
}

.day-text text:last-child {
  color: #7A7D80
}



.course-item-text{
  font-size: 98%;
}